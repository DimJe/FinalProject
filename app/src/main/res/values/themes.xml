<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>
        // 액티비티 내의 뷰들이 Transition이 가능하도록 한다
        <item name="android:windowSharedElementEnterTransition">@transition/splashout</item>
        // 액티비티 이동 시 입장 애니메이션
        <item name="android:windowSharedElementExitTransition">@transition/splashout</item>
        // 액티비티 이동 시 퇴장 애니메이션
    </style>
</resources>